{
    "name": "rhdc/akamai-edge-host-resolver",
    "description": "Resolves host names to Akamai edge prod/staging host names or IP addresses",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Shawn Iwinski",
            "email": "siwinski@redhat.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "squizlabs/php_codesniffer": "^2 || ^3"
    },
    "suggest": {
    },
    "autoload": {
        "psr-4": {
            "Rhdc\\Akamai\\Edge\\HostResolver\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rhdc\\Akamai\\Edge\\HostResolver\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@lint",
            "@cs:check"
        ],
        "cs:check": "phpcs --standard=PSR2 src/ tests/",
        "cs:fix": "phpcbf --standard=PSR2 src/ tests/",
        "lint": "parallel-lint src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
